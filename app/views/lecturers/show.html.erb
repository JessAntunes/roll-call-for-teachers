<br><br>
<div class="container">
    <div class="row">
        <div class="col-6 text-center">
            <%if @lecturer == current_lecturer%>
                <h1 class="display-6"> Welcome, Professor <%=@lecturer.last_name%></h1>
                <%= link_to "Edit Profile", edit_lecturer_path, class: "btn btn-outline-dark btn-sm"%> <%= link_to "New Course", new_lecturer_course_path(@lecturer), class: "btn btn-outline-dark btn-sm"%>
            <%else%>
                <h1 class="display-6">Professor <%=@lecturer.fullname%>'s Profile<h1>
            <%end%>
            <br/><br>
        </div>
    </div>   

        <div class="row">
            <div class="col-6">
                <h4>Courses: </h4>
                <ol class="list-group list-group-numbered">
                <%@lecturer.courses.each do |c|%>
                    <li class="list-group-item d-flex justify-content-between align-items-start"> 
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><%=link_to c.subject, lecturer_course_path(@lecturer, c)%></div>
                            <p>Students Enrolled: <%=c.students.count%></p>
                        </div>
                        <span class="badge bg-light rounded-pill"><%=c.day%></span>
                    </li>
                <%end%>
                </ol>

                <br>
            </div>
            
        </div>
    
</div>
