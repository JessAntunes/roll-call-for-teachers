<div class="container bg-light">
    <br><br>
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-3 ">
            <h2>Course</h2>   
            <div><strong>Subject: </strong><%= @course.subject%></div>
            <div><strong>Lecture: </strong><%= @course.lecturer.fullname%></div>
            <div><strong>Day: </strong><%= @course.day%></div>
            <div><strong>Students Enrolled: </strong><%= @course.students.count %></div>
            <br/>
            <%= link_to "Edit", edit_lecturer_course_path(@course.lecturer), class: "btn btn-outline-dark btn-sm"%>
            <%if @course.lecturer == current_lecturer%>
                <%= link_to "Delete Course", lecturer_course_path(@course.lecturer, @course), method: :delete, class: "btn btn-outline-dark btn-sm", data:{confirm: "Are you sure you want to delete this course?"} %>
            <%end%>
        </div>
        
        <div class="col">
            <h2>Students Enrolled:</h2>

            <% @course.students.each do |student|%>
                <div><%= link_to student.name, student_path(student) %></div>
            <%end%>
            <br>
        </div>
    </div>
</div>
